# Server Configuration
PORT=3007
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Weather API Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Google Maps API Configuration (for travel calculations)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database Configuration (if using a real database)
DATABASE_URL=postgresql://username:password@localhost:5432/hk_tourism_ai

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# External Service URLs
USER_SERVICE_URL=http://localhost:3001
LOCATION_SERVICE_URL=http://localhost:3002
WEATHER_SERVICE_URL=http://localhost:3003
EVENT_SERVICE_URL=http://localhost:3004
CROWD_SERVICE_URL=http://localhost:3005
RECOMMENDATION_SERVICE_URL=http://localhost:3006

# Email Configuration (for sharing itineraries)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@hk-tourism-ai.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here