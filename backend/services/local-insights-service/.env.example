NODE_ENV=development
PORT=3007

# Database Configuration (when implemented)
# DATABASE_URL=mongodb://localhost:27017/local-insights
# REDIS_URL=redis://localhost:6379

# External API Keys (when needed)
# TRANSLATION_API_KEY=your_translation_api_key
# CONTENT_MODERATION_API_KEY=your_moderation_api_key

# Security
JWT_SECRET=your_jwt_secret_key_here

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Authenticity Scoring
MIN_AUTHENTICITY_SCORE=60
TOURIST_TRAP_THRESHOLD=70
HIGH_AUTHENTICITY_THRESHOLD=80

# Content Moderation
AUTO_FLAG_REPORT_COUNT=5
AUTO_REMOVE_REPORT_COUNT=10