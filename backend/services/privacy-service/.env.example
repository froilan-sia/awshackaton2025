# Privacy Service Configuration
PORT=3007
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# API Security
VALID_API_KEYS=hashed-api-key-1,hashed-api-key-2

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX=5

# Database Configuration (if using external database)
DATABASE_URL=postgresql://username:password@localhost:5432/privacy_db

# Email Service (for GDPR verification emails)
EMAIL_SERVICE_URL=https://your-email-service.com
EMAIL_API_KEY=your-email-api-key

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true

# Data Retention
DEFAULT_CONSENT_EXPIRY_MONTHS=12
DATA_RETENTION_CHECK_INTERVAL=86400000

# Anonymization
ANONYMIZATION_SALT_LENGTH=32
ANONYMIZATION_HASH_ALGORITHM=sha256
K_ANONYMITY_THRESHOLD=5