# Environment Configuration
NODE_ENV=development

# API Gateway Configuration
API_GATEWAY_PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Service URLs (for development)
USER_SERVICE_URL=http://localhost:3001
RECOMMENDATION_SERVICE_URL=http://localhost:8000
LOCATION_SERVICE_URL=http://localhost:3002
EVENT_SERVICE_URL=http://localhost:3003

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hk-tourism
REDIS_URL=redis://localhost:6379
POSTGRES_URI=postgresql://postgres:password@localhost:5432/hk_tourism_analytics

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENWEATHER_API_KEY=your-openweather-api-key
HKTB_API_KEY=your-hktb-api-key
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Mall APIs (Mock endpoints for development)
IFC_MALL_API_URL=https://api.ifc.com.hk/events
PACIFIC_PLACE_API_URL=https://api.pacificplace.com.hk/events
HARBOUR_CITY_API_URL=https://api.harbourcity.com.hk/events

# AI/ML Configuration
ML_MODEL_PATH=./models
OPENAI_API_KEY=your-openai-api-key
TENSORFLOW_SERVING_URL=http://localhost:8501

# Logging and Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=hk-tourism-assets

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
REDIS_PASSWORD=your-redis-password

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=true