{
  "name": "hk-tourism-platform-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for Hong Kong Tourism AI Platform",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=jest.config.js",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "cypress run --config-file=e2e/cypress.config.js",
    "test:e2e:open": "cypress open --config-file=e2e/cypress.config.js",
    "test:accessibility": "node accessibility/accessibility-test-suite.js",
    "test:security": "node security/security-test-suite.js",
    "test:performance": "node performance/recommendation-benchmark.js",
    "test:load": "artillery run load/tourist-season-simulation.yml",
    "test:load:report": "artillery run load/tourist-season-simulation.yml --output load/reports/load-test-$(date +%s).json",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:accessibility && npm run test:security && npm run test:performance",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:accessibility && npm run test:security",
    "test:tourist-season": "npm run test:load && npm run test:performance",
    "report:generate": "node scripts/generate-comprehensive-report.js",
    "report:accessibility": "node scripts/generate-accessibility-report.js",
    "report:security": "node scripts/generate-security-report.js",
    "report:performance": "node scripts/generate-performance-report.js"
  },
  "keywords": [
    "testing",
    "tourism",
    "hong-kong",
    "ai",
    "accessibility",
    "security",
    "performance",
    "e2e"
  ],
  "author": "Hong Kong Tourism Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@types/jest": "^29.5.5",
    "artillery": "^2.0.0",
    "axios": "^1.5.0",
    "cypress": "^13.3.0",
    "jest": "^29.7.0",
    "playwright": "^1.38.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/../backend"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}